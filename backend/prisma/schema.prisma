generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  password     String?
  walletAddress String? @unique
  bio          String?
  phone        String?
  location     String?
  website      String?
  role         String?
  company      String?
  mfaEnabled   Boolean  @default(false)
  mfaSecret    String?
  mfaAttempts  Int      @default(0)
  mfaLockedUntil DateTime?
  createdAt    DateTime @default(now())
  tasks        Task[]
  comments     Comment[]
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  completedAt DateTime? // Timestamp when task was completed
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  dueDate     DateTime?
  priority    String?   @default("Medium") // Low, Medium, High
  assignee    String?   // User ID or wallet address
  tags        String[]  @default([]) // Array of tags
  attachments String[]  @default([]) // Array of attachment URLs/IPFS hashes
  // Web3 fields
  hasWeb3Reward Boolean @default(false)
  blockchainTaskId String? // Task ID from smart contract
  rewardAmount    String? // Reward amount in wei or token units
  rewardToken     String? // Token address (null for ETH)
  transactionHash String? // Transaction hash when created on blockchain
  badgeTokenId    String? // NFT badge token ID if minted
  comments        Comment[] // Comments on this task
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}